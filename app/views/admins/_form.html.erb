<p id="notice"><%= notice %></p>

<%= form_for(@admin) do |f| %>
  <% if @admin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this admin from being saved:</h2>

      <ul>
        <% @admin.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br>
    <% if controller.action_name == "edit" %>
      <%= f.text_field :username, size: 50, readonly: true %>
    <% else %>
      <%= f.text_field :username, size: 50 %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, size: 50 %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, size: 50 %>
  </div>

  <div class="field">
    <%= f.label :active %> <%= f.check_box :active %>
  </div>

  <ul>
    <% @domains.each do |d| %>
      <% if @admin.rel_domains.exists?(d.domain) %>
      <li><%= d.domain %> <%= check_box_tag 'admin[domains][]', d.domain, checked: true %></li>
      <% else %>
      <li><%= d.domain %> <%= check_box_tag 'admin[domains][]', d.domain %></li>
      <% end %>
    <% end %>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>