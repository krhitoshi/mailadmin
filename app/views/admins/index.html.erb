<h1>Admins</h1>

<table>
  <tr>
    <th>Admin</th>
    <th>Domains</th>
    <th>Active</th>
    <th>Modified</th>
  </tr>
  <% @admins.each do |admin| %>
    <tr>
      <td><%= link_to admin.username, admin %></td>
      <td>
        <% if admin.super_admin? %>
          Super Admin
        <% else %>
          <%= admin.domains.count %>
        <% end %>
      </td>
      <td><%= admin.active %></td>
      <td><%= admin.modified %></td>
    </tr>
  <% end %>
</table>