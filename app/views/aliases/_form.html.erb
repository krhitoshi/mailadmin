<p id="notice"><%= notice %></p>

<%= link_to 'Back', domain_path(@domain) %>

<%= form_for([@domain, @alias]) do |f| %>
  <% if @alias.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@alias.errors.count, "error") %> prohibited this alias from being saved:</h2>

      <ul>
        <% @alias.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :local_part %><br>
    <% if controller.action_name == "edit" %>
      <%= f.text_field :local_part, size: 20, readonly: true %>
    <% else %>
      <%= f.text_field :local_part, size: 20 %>
    <% end %>
    @<%= @domain.domain %>
  </div>

  <div class="field">
    <%= f.label :goto %><br>
    <%= f.text_field :goto, size: 50 %>
  </div>

  <% if @alias.pure_alias? %>
  <div class="field">
    <%= f.label :active %> <%= f.check_box :active %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit(class: "btn btn-primary") %>
  </div>

<% end %>