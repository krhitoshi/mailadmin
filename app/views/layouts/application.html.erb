<!DOCTYPE html>
<html>
  <head>
    <title>Mailadmin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "Mailadmin", root_path, class: "navbar-brand" %>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Admins", admins_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Domains", domains_path, class: "nav-link" %>
          </li>
        </ul>

        <div class="ml-md-auto">
          Signed in as
          <span class="font-weight-bold"><%= @current_admin.username %></span>
          &nbsp;&nbsp;
          <%= link_to "Sign out", logout_path, method: :delete,
                      role: "button", class: "btn btn-outline-primary" %>
        </div>
      </div>
    </nav>

    <%= yield %>
  </div>
  </body>
</html>
