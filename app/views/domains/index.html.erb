<% if flash[:notice] %>
  <div class="alert alert-primary" role="alert"><%= notice %></div>
<% end %>

<table class="table">
  <thead class="thead-dark">
  <tr>
    <th>#</th>
    <th>Domain</th>
    <th>Description</th>
    <th>Mailboxes</th>
    <th>Aliases</th>
    <th>Max Quota</th>
    <th>Active</th>
    <th>Show</th>
    <% if @current_admin.super_admin? %>
      <th>Edit</th>
      <th>Delete</th>
    <% end %>
    <th>Modified</th>
  </tr>
  </thead>
  <tbody>
  <% @domains.each_with_index do |domain, i| %>
    <% tr_class = domain.active? ? "" : "table-secondary" %>
    <tr class="<%= tr_class %>">
      <td><%= i+1 %></td>
      <td><%= domain.domain %></td>
      <td><%= domain.description %></td>
      <td><%= domain.rel_mailboxes.count %> / <%= domain.mailboxes %></td>
      <td><%= domain.pure_aliases.count %> / <%= domain.aliases %></td>
      <td><%= domain.maxquota_str %></td>
      <td><%= domain.active_str %></td>
      <td><%= link_to "Show", domain,
                      role: "button", class: "btn btn-primary btn-sm" %></td>

      <% if @current_admin.super_admin? %>
        <td><%= link_to "Edit", edit_domain_path(domain),
                        role: "button", class: "btn btn-info btn-sm" %></td>
        <td><%= link_to "Delete", domain, method: :delete,
                        data: { confirm: 'Are you sure?' },
                        role: "button", class: "btn btn-secondary btn-sm" %></td>
      <% end %>
      <td><%= l domain.modified %></td>
    </tr>
  <% end %>
  </tbody>
</table>