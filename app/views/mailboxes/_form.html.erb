<p id="notice"><%= notice %></p>

<%= form_for([@domain, @mailbox]) do |f| %>
  <% if @mailbox.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mailbox.errors.count, "error") %> prohibited this mailbox from being saved:</h2>

      <ul>
        <% @mailbox.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username, size: 50 %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, size: 50 %>
  </div>

  <div class="field">
    <%= f.label :domain %><br>
    <%= f.text_field :domain, size: 50, readonly: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, size: 50 %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, size: 50 %>
  </div>

  <div class="field">
    <%= f.label :quota %><br>
    <%= f.text_field :quota, size: 50 %>
  </div>

  <div class="field">
    <%= f.label :active %> <%= f.check_box :active %>
  </div>

  <div class="actions">
    <%= f.submit(class: "btn btn-primary") %>
  </div>

<% end %>